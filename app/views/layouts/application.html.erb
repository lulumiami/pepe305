<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- navbar  -->
<nav class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span> 
      </button>
      <a class="navbar-brand" href="#">
      	<img src="http://pepelovesbooks.com/wp-content/uploads/pepe-loves-books_03.png" alt="brand_logo">
      </a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#"><%= image_tag("Home_button.png", :class => "nav_buttons") %></a></li>       
        <li><%= link_to image_tag("store_button.png", :class => "nav_buttons"), products_path %></li> 
        <li><a href="#contact"><%= image_tag("contact_button.png", :class => "nav_buttons") %></a></li> 

        <% if user_signed_in? %>
		<% if current_user.admin? %>
		<li>
			<%= link_to "Admin", root_path %>
		</li>
		<%end%>
			<li>
				<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>   
                <!-- <%#= image_tag("log_out.png", :class => "nav_buttons") %>      -->
			</li>
		<% else %>
			<li>
				<%= link_to(new_user_session_path) do %>
				<%= image_tag("login_button.png", :class => "nav_buttons") %>
				<% end %>  
			</li>
		<% end %>
      </ul>
    </div>
  </div>
</nav>

<!-- Banner image -->
<img class="banner" src="http://pepelovesbooks.com/wp-content/uploads/pepe-loves-books_22.jpg">
	





	<div class="container">
		<%= yield %>
	</div>

</body>
</html>
